# Uncomment the next line to define a global platform for your project
# platform :ios, '10.0'

target 'Swappy' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  # ignore all warnings from all pods
  inhibit_all_warnings!

  # Pods for Swappy

  # DI
  pod 'Swinject', '~> 2.6.0'
  pod 'SwinjectStoryboard', '~> 2.2.0'
  
  # Network
  pod 'Moya', '~> 12.0'
  
  # Images
  pod 'SDWebImage', '~> 4.0'
  
  # Keychain
  pod 'KeychainAccess'
  
  # Slideshow view
  pod 'ImageSlideshow', '1.7.0'
  pod 'ImageSlideshow/SDWebImage'
  
  # Floating UITextField
  pod 'SkyFloatingLabelTextField', '~> 3.0'
  pod 'InputMask', '4.1.1'
  
  # LoadingView
  pod 'MBProgressHUD', '~> 1.1.0'
  
  # Keyboard manager
  pod 'IQKeyboardManagerSwift', '6.0.4'
  
  # Photos picker
  pod 'BSImagePicker', '2.10.0'
  
  # Push Notifications
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
  
  # Social networks
  #pod 'SwiftyVK', '3.3.1'
  pod 'VK-ios-sdk'
  pod 'FacebookCore', '0.7.0'
  pod 'FacebookLogin', '0.7.0'
  #pod 'FBSDKLoginKit'

  
  # Analytics
  pod 'YandexMobileMetrica', '3.6.0'
  pod 'AppsFlyerFramework'
  
  # Constraints
  pod 'SnapKit', '4.2.0'
  
  # Crashlytics
  pod 'Fabric'
  pod 'Crashlytics'
  
  target 'SwappyTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SwappyUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
